<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6A1B9A"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastUpdatedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated: --"
                android:textSize="11sp"
                android:textColor="#E1BEE7"
                android:paddingTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:elevation="2dp">

            <EditText
                android:id="@+id/searchEdit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Search..."
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textSize="13sp" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="GO"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <LinearLayout
                android:id="@+id/summaryRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="14dp"
                android:elevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textSize="10sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/summaryUsd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#00897B" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EUR"
                        android:textSize="10sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/summaryEur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#00897B" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JPY"
                        android:textSize="10sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/summaryJpy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#00897B" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="Refresh Rates"
                android:textSize="12sp"
                android:backgroundTint="#AB47BC" />

            <TextView
                android:id="@+id/rawDataDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ratesRecycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />
    </LinearLayout>

</LinearLayout>
